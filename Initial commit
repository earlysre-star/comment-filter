<body>
<header>
  <h1>Comment Filter</h1>
  <p>Type the harsh comment you’re about to post. Get a version that keeps your point but removes the sting.</p>
</header>

<main>
  <div class="input-group">
    <label for="input">Your raw comment</label>
    <textarea id="input" placeholder="E.g. I strongly disagree—can we walk through the data that led to this decision?""></textarea>
    <button onclick="filterComment()">Filter Comment</button>
  </div>

  <div id="card">
    <span id="badge" class="badge"></span>
    <p id="rewrite"></p>
    <button class="copy-btn" onclick="copyRewrite()">Copy</button>
    <p id="score"></p>
  </div>

  <footer>
    Comments filtered: <span id="count">0</span> | © 2025 North Light Path
  </footer>
</main>

<script>
/* ---------- FAKE API (zero cost) ---------- */
function filterComment(){
  const txt=document.getElementById("input").value.trim();
  if(!txt){alert("Type a comment first.");return;}
  const h=txt.split('').reduce((a,b)=>{a=((a<<5)-a)+b.charCodeAt(0);return a&a},0);
  const sources=["Fear","Control","Shame","Peace","Harmony","Collaboration"];
  const align  =["Respect-Kept","Respect-Lost"];
  const source =sources[Math.abs(h)%6];
  const alignment=Math.abs(h)%2===0?align[0]:align[1];
  const score  =100-(sources.indexOf(source)*15)-(alignment==="Respect-Lost"?20:0);
  const rewrite="I strongly disagree—can we walk through the data that led to this decision?";
  document.getElementById("badge").textContent=source+" · "+alignment;
  document.getElementById("badge").className="badge "+source;
  document.getElementById("rewrite").textContent=rewrite;
  document.getElementById("score").textContent="Respect Index: "+score+"/100";
  document.getElementById("card").classList.add("show");
  let c=parseInt(localStorage.getItem("filterCount")||"0")+1;
  localStorage.setItem("filterCount",c);
  document.getElementById("count").textContent=c;
}
function copyRewrite(){
  navigator.clipboard.writeText(document.getElementById("rewrite").textContent);
  document.querySelector(".copy-btn").textContent="Copied!";
  setTimeout(()=>document.querySelector(".copy-btn").textContent="Copy",1500);
}
</script>
